<div class= "container portfolio-container">
  <div class = "row">
    <div class = "col-md-7">
      <% image_tag portfolio_img(@portfolio_item.thumb_image,'main'),width: '100' %>
    </div>
    
    <div class = "col-md-5">
    <p>
      <strong>Title:</strong>
      <%= @portfolio_item.title %>
    </p>
   
    <p>
      <strong>Subtitile:</strong>
      <%= @portfolio_item.subtitle %>
    </p>

    <p>
      <strong>Body:</strong>
      <%= @portfolio_item.body %>
    </p>

    <h2>Technologies Used:</h2>

    <% @portfolio_item.technologies.each do |t| %>
    <p><%= t.name %></p>
    <%end%>

    <%if logged_in?(:site_admin)%>
      <div class = "">
        <%= link_to "Edit Item" , edit_portfolio_path(@portfolio_item) , class: 'btn btn-warning'%>
      </div>
    <% end %>
    
    </div>
  </div>
</div> 


  