<h1>Portfolios Items</h1>

<%= link_to "Create new Item",new_portfolio_url%>

<table>
  <tr>
    <th>Title</th>
    <th>Subtitle</th>
    <th>Body </th>
    <th>Main_image</th>
  </tr>
   
   <% @angular_portfolio_items.each do |portfolio_item| %>
    <tr>
      <td><%= link_to portfolio_item.title,portfolio_show_url(portfolio_item) %></td>
      <td><%= portfolio_item.subtitle %></td>
      <td><%= portfolio_item.body %></td>
      <td><%= portfolio_item.main_image %></td>

      <td><%= link_to 'Edit', edit_portfolio_url(portfolio_item) %></td>
      <td><%= link_to 'Delete ',portfolio_path(portfolio_item),method: :delete , data: {confirm: 'Are you sure ?'} %></td>
    </tr>
  <% end %>
</table>
