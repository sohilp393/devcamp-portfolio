<!DOCTYPE html>
<html>
  <head>
    <title>DevcampPortfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
       <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

      <div>
        <div><%= link_to "Home",root_path%></div>
        <div><%= link_to "About",about_path%></div>
        <div><%= link_to "Contact",contact_path%></div>
        <div><%= link_to "Blog",blogs_path%></div>
        <div><%= link_to "Portfolio",portfolios_path%></div>
      </div>
       <% if current_user %> 
        <%= link_to "Logout",destroy_user_session_path ,method: :delete%>
       <% else %>
        <%= link_to "Register",new_user_registration_path %>
        <%= link_to "Logout", new_user_session_path%>
       <%end%>  

    <%= yield %>
    <%# http://localhost:3000/portfolio/9?q=twitter %>
    <%if session[:source]%>
    Thanks for visiting me from <%= session[:source] %>
    <%end%>
  </body>
</html>
